{
  "name": "vscode-notes",
  "displayName": "vscode-notes",
  "description": "vscode notes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "NotesMD",
      "properties": {
        "vscode-notes.notesLocation": {
          "type": "string",
          "default": "~/Documents/NotesMD",
          "description": "Notes location."
        }
      }
    },
    "commands": [
      {
        "command": "vscode-notes.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-notes.addNote",
        "title": "Add Note",
        "icon": "$(new-file)"
      },
      {
        "command": "vscode-notes.openSettings",
        "title": "Open Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "vscode-notes.addFolder",
        "title": "Add Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "vscode-notes.openFile",
        "title": "Open File"
      },
      {
        "command": "vscode-notes.deleteEntry",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "vscode-notes.renameEntry",
        "title": "Rename",
        "icon": "$(pencil)"
      }
    ],
    "viewsContainers": {
			"activitybar": [
				{
					"id": "mdNotes",
					"title": "Notes",
					"icon": "media/dep.svg"
				}
			]
		},
    "menus": {
      "view/title": [
        {
          "command": "vscode-notes.addNote",
          "when": "view == mdNotes",
          "group": "navigation"
        },
        {
          "command": "vscode-notes.addFolder",
          "when": "view == mdNotes",
          "group": "navigation"
        },
        {
          "command": "vscode-notes.openSettings",
          "when": "view == mdNotes",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-notes.deleteEntry",
          "when": "view == mdNotes"
        },
        {
          "command": "vscode-notes.deleteEntry",
          "when": "view == mdNotes",
          "group": "inline"
        },
        {
          "command": "vscode-notes.renameEntry",
          "when": "view == mdNotes",
          "group": "inline"
        },
        {
          "command": "vscode-notes.addNote",
          "when": "view == mdNotes && viewItem == folder"
        }
      ]
    },
		"views": {
			"mdNotes": [
				{
					"id": "mdNotes",
					"name": "Notes",
					"icon": "media/dep.svg",
					"contextualTitle": "Notes"
				}
			]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
